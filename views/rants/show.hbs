<div class="row">
    <div class="col s12 m8">
        <h3>{{rant.title}}
            <small>{{{editIcon rant.user user rant._id false}}}</small>
        </h3>
        <div class="card rant">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{rant.body}}}
            </div>
        </div>
    </div>
    
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{rant.user.displayName}}</span>
                <img src="{{rant.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/rants/user/{{rant.user._id}}">More From {{rant.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>
<a href=""><i class="fas fa-arrow-left-long"> Back</i></a>

